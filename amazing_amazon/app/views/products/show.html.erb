
<%= render "shared/navbar" %>
<div>
        ID: <%= @product.id %>
      <%= @product.title %>
      <%= @product.description %>

        <span ><%= number_to_currency @product.price %></span>
            <%= button_to(
                  "Delete",
                  product_path(@product),
                  method: :delete,
                  data: { confirm: "are you sure?" },
                ) %>
                    <%= link_to "Edit", edit_product_path(@product) %>

</div>